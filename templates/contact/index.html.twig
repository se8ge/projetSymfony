{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<header>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        
    <nav>
        <ul>
            <li><a href="{{ path('app_blog') }}">BLOG</a></li>
            <li><a href="{{ path('app_contact') }}">CONTACT</a></li>
            <li><a href="{{ path('app_home') }}">ACCUEIL</a></li>
            <li id="logo"> <img src="{{ asset('images/logo.jpg') }}" style="height: 50px;"> </li>
            
            {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('app_admin_dashboard') }}">CONNEXION</a></li>
        {% endif %}
        </ul>
    </nav>
</header>

<div class="container my-5">
    {# Affichage des messages de succès #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Formulaire Symfony #}
    <section class="contact-section">
        <h2 class="contact-title">Contactez-moi</h2>
    
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.firstName) }}
                {{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
            </div>
    
            <div class="form-group">
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
            </div>
    
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
    
            <div class="form-group">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject, { 'attr': {'class': 'form-control'} }) }}
            </div>
    
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message, { 'attr': {'class': 'form-control', 'rows': 6} }) }}
            </div>
    
            <button type="submit" class="btn-submit">Envoyer</button>
        {{ form_end(form) }}
    </section>

<div class="container">
    <h2>Informations pratiques</h2>

    <div class="row">
        <div class="col-md-6">
            <p><strong>Adresse :</strong> VideasteCampus</p>
            <p><strong>Téléphone :</strong> +225 07 58 93 33 19</p>
            <p><strong>Email :</strong> info@videastecampus.com</p>
            <p><strong>Horaires :</strong> Lundi - Vendredi, 08h - 18h</p>
        </div>
        <div class="col-md-6">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3972.609907315117!2d-4.0261457255250255!3d5.323382835946077!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfc1eb80645b4cb5%3A0x375b6ad46982528!2zQ2l0w6kgcmFuIDYgYsOidGltZW50!5e0!3m2!1sfr!2sfr!4v1712272808775!5m2!1sfr!2sfr"
                width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>

<footer>
    <p>&copy; 2025 Mon Blog Jeux Vidéo | <a href="{{ path('app_mentions_legales') }}">Mentions légales</a> | <a href="{{ path('app_politique_confidentialite') }}">Politique de confidentialité</a></p>
</footer>
{% endblock %}
