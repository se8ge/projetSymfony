{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>


    <div class="container">
        <h1>Gérer les Articles</h1>
        <a href="{{ path('app_admin_article_new') }}" class="btn btn-success">Ajouter un Article</a>

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>
                            <a href="{{ path('app_admin_article_edit', {id: article.id}) }}" class="btn btn-warning">Modifier</a>
                            <form action="{{ path('app_admin_article_delete', {id: article.id}) }}" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">Supprimer</button>
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
